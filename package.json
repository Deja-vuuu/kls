{
	"name": "kls",
	"displayName": "快兰斯财经",
	"description": "快兰斯24小时财经直播",
	"version": "0.0.4",
	"publisher": "Kong",
	"engines": {
		"vscode": "^1.66.0"
	},
	"icon": "assets/img/kls.png",
	"categories": [
		"Other"
	],
	"keywords": [
		"财经",
		"快兰斯",
		"新闻",
		"行情",
		"A股"
	],
	"repository": "https://github.com/Deja-vuuu/kls",
	"activationEvents": [
		"onView:kls.plugin.webView",
		"onCommand:kls.sayHello"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [{
				"id": "klsplugin",
				"title": "快兰斯24小时财经直播",
				"icon": "assets/img/logo.svg"
			}]
		},
		"views": {
			"klsplugin": [{
				"id": "kls.plugin.webView",
				"name": "今日热点",
				"type": "webview"
			}]
		},
		"commands": [{
			"command": "kls.sayHello",
			"title": "Add Color kls.sayHello",
			"icon": "$(refresh)"
		}],
		"menus": {
			"view/title": [{
				"command": "kls.sayHello",
				"group": "navigation",
				"when": "view == kls.plugin.webView"
			}]
		}
	},

	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.66.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.21.0",
		"@typescript-eslint/parser": "^5.21.0",
		"eslint": "^8.14.0",
		"glob": "^8.0.1",
		"mocha": "^9.2.2",
		"typescript": "^4.6.4",
		"ts-loader": "^9.2.8",
		"webpack": "^5.70.0",
		"webpack-cli": "^4.9.2",
		"@vscode/test-electron": "^2.1.3"
	}
}